#include <stdio.h>

void main(void)
{
    int height= 0;
    scanf("%i",&height);
    for(int i=1; i<= height; i++)
    {
        //the first pyramid
        for(int j=i; j<= height-1; j++)
        {
            printf(" ");
        }
        for(int k=1; k<=i;k++)
        {
            printf("#");
        }
        
        //just the space between the two pyramid
        printf("  ");
        
        //the second pyramid
        for(int l=1; l<=i; l++)
        {
            printf("#");
        }
        printf("\n");
    }
}
